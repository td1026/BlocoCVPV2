# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                                controllers.HomeController.index
GET     /login                           controllers.HomeController.getLogin
POST    /login                           controllers.HomeController.postLogin
GET     /logout                          controllers.HomeController.getLogout

GET     /registar                        controllers.HomeController.getRegistar
POST    /registar                        controllers.HomeController.postRegistar

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
